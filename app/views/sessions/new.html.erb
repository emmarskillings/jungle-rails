<section class="user-login-new">

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">

      <%= form_tag '/login' do  %>

        <div class="form-group input">
          Email <p><%= text_field_tag :email %></p>
        </div>
        <div class="form-group input" >
          Password <p><%= password_field_tag :password %></p>
        </div>
        <div class="form-group submit">
          <%= submit_tag "Submit" %>
        </div>

      <% end %>

    </div>
  </div>

</section>
